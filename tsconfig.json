{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "noEmit": true,
        "paths": {
            "@/*": ["./src/*.ts"]
        },
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext"
    },
    "exclude": ["node_modules/"],
    "include": ["./src/**/*"]
}
