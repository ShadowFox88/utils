{
    "env": {
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/stylistic",
        "prettier"
    ],
    "ignorePatterns": [
        "node_modules/"
    ],
    "overrides": [
        {
            "env": {
                "browser": true,
                "es6": true
            },
            "files": [
                "./src/common.ts"
            ]
        },
        {
            "env": {
                "browser": true
            },
            "files": [
                "./src/browser.ts"
            ]
        }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "root": true,
    "rules": {
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/no-unused-vars": "error",
        "import/no-anonymous-default-export": "off",
        "no-console": "warn",
        "no-control-regex": "off",
        "no-unused-vars": "off"
    }
}
